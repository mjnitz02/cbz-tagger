{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run cbz-tagger",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "args": ["--entrymode"],
            "console": "integratedTerminal",
            "env": {
                "TIMER_MODE": "true",
                "TIMER_DELAY": "25",
                "GUI_MODE": "true",
                "LOG_LEVEL": "INFO",
                "CONFIG_PATH": "${env:HOME}/Downloads/cbz_tagger/config",
                "LOG_PATH": "${env:HOME}/Downloads/cbz_tagger/config/logs/cbz_tagger.log",
                "SCAN_PATH": "${env:HOME}/Downloads/cbz_tagger/scan",
                "STORAGE_PATH": "${env:HOME}/Downloads/cbz_tagger/storage"
            }
        }
        ,
        {
            "name": "CBZ Tagger Dev Servers (FastAPI backend)",
            "type": "python",
            "request": "launch",
            "module": "cbz_tagger.web.server",
            "console": "integratedTerminal",
            "env": {
                "LOG_LEVEL": "INFO",
                "TIMER_MODE": "true",
                "TIMER_DELAY": "35",
                "CONFIG_PATH": "${env:HOME}/Downloads/cbz_tagger/config",
                "SCAN_PATH": "${env:HOME}/Downloads/cbz_tagger/scan",
                "STORAGE_PATH": "${env:HOME}/Downloads/cbz_tagger/storage"
            }
        },
        {
            "name": "CBZ Tagger Dev Servers (NiceGUI frontend)",
            "type": "python",
            "request": "launch",
            "module": "cbz_tagger.gui.server",
            "console": "integratedTerminal",
            "env": {
                "LOG_LEVEL": "INFO",
                "TIMER_MODE": "true",
                "TIMER_DELAY": "35",
                "CONFIG_PATH": "${env:HOME}/Downloads/cbz_tagger/config",
                "SCAN_PATH": "${env:HOME}/Downloads/cbz_tagger/scan",
                "STORAGE_PATH": "${env:HOME}/Downloads/cbz_tagger/storage"
            }
        }
    ]
}
